<Page x:Class="Statement_Sender_Client.View.Categories.StatementCategoryPages.StatementFunctionalPage.SVP_SubPage.StatementEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Statement_Sender_Client.View.Categories.StatementCategoryPages.StatementFunctionalPage.SVP_SubPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatementEditor">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden"
               VerticalScrollBarVisibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" >

                    <StackPanel Orientation="Horizontal" 
                         HorizontalAlignment="Right" 
                         VerticalAlignment="Center">
                        <Label  Content="Статус"
                         VerticalAlignment="Center"></Label>
                        <TextBox Text="Новий"
                         VerticalAlignment="Center"
                         IsReadOnly="True"></TextBox>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" 
                    Content="Відправник"
                    VerticalAlignment="Center"></Label>
                    <TextBox Grid.Column="1" 
                      Text="nan"
                      
                      VerticalAlignment="Center">

                    </TextBox>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                    Content="Адреса"
                    VerticalAlignment="Center"></Label>
                    <TextBox Grid.Column="1"
                      Text="nan"
             
                      VerticalAlignment="Center">
                    </TextBox>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                    Content="Підрозділ"
                    VerticalAlignment="Center"></Label>
                    <TextBox Grid.Column="1"
                      Text="nan"
             
                      VerticalAlignment="Center">
                    </TextBox>

                </Grid>

                <Grid Grid.Row="4" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                    Content="Кімната"
                    VerticalAlignment="Center"></Label>
                        <TextBox Grid.Column="1"
                      Text="nan"
                      VerticalAlignment="Center"></TextBox>
                    </Grid>


                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                         Content="Контактний номер"
                         VerticalAlignment="Center"></Label>
                        <TextBox Grid.Column="1"
                         Text="nan"
                         VerticalAlignment="Center"></TextBox>
                    </Grid>
                </Grid>

                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                    Content="Інший Адрес"
                    VerticalAlignment="Center"></Label>
                    <CheckBox Grid.Column="1"
                       VerticalAlignment="Center"></CheckBox>

                </Grid>

                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                    Content="Категорія"
                    VerticalAlignment="Center"></Label>
                    <TextBox Grid.Column="1"
                      Text="nan"
                      VerticalAlignment="Center"></TextBox>
                </Grid>




                <Grid Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                    Content="Короткий опис"
                    VerticalAlignment="Center"></Label>
                    <TextBox Grid.Column="1"
                      Text="nan"
                      VerticalAlignment="Center"></TextBox>
                </Grid>

                <Grid Grid.Row="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                     Content="Опис"
                     VerticalAlignment="Top"></Label>
                    <TextBox Grid.Column="1"
                     Text="nan"></TextBox>

                </Grid>

                <Grid Grid.Row="9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                     Content="Коментар"
                     VerticalAlignment="Top"></Label>
                    <TextBox Grid.Column="1"
                     Text="nan"></TextBox>

                </Grid>

                <Grid Grid.Row="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                     Content="Додаток"
                     VerticalAlignment="Top"></Label>
                    <DataGrid Grid.Column="1"
                   ></DataGrid>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
